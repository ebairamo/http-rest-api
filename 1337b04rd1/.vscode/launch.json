{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Connect to Delve in Docker",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/app",
        "port": 40000,
        "host": "127.0.0.1",
        "cwd": "${workspaceFolder}",
        "substitutePath": [
          {
            "from": "${workspaceFolder}",
            "to": "/app"
          }
        ]
      }
    ]
  }
  