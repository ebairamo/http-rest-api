{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}", // Убедитесь, что это путь к вашему файлу
            "args": ["-w", "15", "-p", "to something funny the", "-l", "4"], // Аргументы должны быть в виде отдельных строк
            "console": "integratedTerminal",
            "env": {
                "ENV_VAR": "value"
            }
        }
    ]
}
